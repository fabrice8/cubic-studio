{
  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.ts",
    "src/types/index.d.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "typeRoots": ["src/types"]
  },
  "include": ["/cubic.yml", "/src/**/*"],
  "exclude": ["/src/fontend/views/**/*"],
  "watchOptions": {
    "excludeFiles": ["*.marko"]
  }
}
